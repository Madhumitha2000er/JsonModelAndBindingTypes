<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns="sap.m">

<Dialog title="Product Details">
<content>
  <form:SimpleForm >
    <form:content>
       <!-- Element Binding -->
        <Label text="Product Id"></Label>
        <Text text="{ProductJSONModel>ProductId}"></Text>
        <Label text="Name"></Label>
        <Text text="{ProductJSONModel>Name}"></Text>
        <Label text="Category"></Label>
        <Text text="{ProductJSONModel>Category}"></Text>
        <Label text="Supplier Name"></Label>
        <Text text="{ProductJSONModel>SupplierName}"></Text>
        <Label text="Date of Sale"></Label>
        <Text text="{ProductJSONModel>DateOfSale}"></Text>
        <Label text="Price"></Label>
        <Text text="{ProductJSONModel>Price}"></Text>
        <Label text="Quantity"></Label>
        <Text text="{ProductJSONModel>Quantity}"></Text>
    
    </form:content>
  
  </form:SimpleForm>

</content>
<endButton>
  <Button text="Close" press="onCloseDialog"></Button>
</endButton>
</Dialog>


</core:FragmentDefinition>